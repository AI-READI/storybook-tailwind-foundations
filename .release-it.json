{
  "gitlab": {
    "release": true,
    "releaseName": "Release ${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": ":sparkles: Features"
          },
          {
            "type": "fix",
            "section": ":beetle: Bug Fixes"
          },
          {
            "type": "docs",
            "section": ":open_file_folder: Documentation"
          },
          {
            "type": "style",
            "section": ":art: Style"
          }
        ]
      },
      "infile": "CHANGELOG.md"
    }
  }
}
